<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Tutorial 1"
        android:textSize="10dp"
        android:id="@+id/tutorialSatu"
        app:layout_constraintTop_toBottomOf="@+id/judulHome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Tutorial 2"
        android:textSize="10dp"
        android:id="@+id/tutorialDua"
        app:layout_constraintTop_toBottomOf="@+id/tutorialSatu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Tutorial 3"
        android:textSize="10dp"
        android:id="@+id/tutorialTiga"
        app:layout_constraintTop_toBottomOf="@+id/tutorialDua"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>